@model IEnumerable<ProvaBim1.Models.Produto>
@{
    ViewBag.Title = "Logado";
}

<h2>Logado</h2>

<form>

    @Html.ActionLink("Novo Produto", "Create")
    <br />
    @Html.ActionLink("Sair", "Index", "Produto")

    <br />
    <br />
    <br />

    <table width="100%">

        <tr>
            <td>ID</td>
            <td>CATEGORIA</td>
            <td>NOME</td>
            <td>PRECO</td>
            <td>DESCRICAO</td>
            <td>MARCA</td>
            <td>MODELO</td>
            <td>-</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.idProduto</td>
                @if (item.categoria == 1)
                {
                    <td>CELULAR</td>
                }
                else if (item.categoria == 2)
                {
                    <td>TABLET</td>
                }
                else if (item.categoria == 3)
                {
                    <td>NOTEBOOK</td>
                }
                else if (item.categoria == 4)
                {
                    <td>CARREGADOR</td>
                }
                <td>@item.nome</td>
                <td>@item.preco</td>
                <td>@item.descricao</td>
                <td>@item.marca</td>
                <td>@item.modelo</td>
                <td>@Html.ActionLink("Alterar", "Update", new { id = item.idProduto })</td>
                <td>@Html.ActionLink("Deletar", "Delete", new { id = item.idProduto })</td>
            </tr>
        }

    </table>

</form>

